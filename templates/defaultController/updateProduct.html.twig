{% extends "base.html.twig" %}
{% block title %}
	{{ parent() }}
	Modifier un Produit
{% endblock %}
{% block content %}
	<div class="container-fluid">
		<div class="row justify-content-center">
			<div class="col-12 col-md-6 align-items-center">
				<h1 class="text-center text-primary fw-bold m-2">Modifier un Produit
				</h1>
				<form method="POST">
					<input type="hidden" value="{{product.id}}" name="id" class="form-control">
					<input type="text" value="{{product.name}}" name="name" class="form-control">
					<input type="text" value="{{product.price}}" name="price" class="form-control">
					<textarea name="description" class="form-control">{{product.description}}</textarea>
					<div class="text-center">
						<input type="submit" value="Modifier" class="btn btn-primary m-2">
					</div>
				</form>
			</div>
		</div>
	</div>
{% endblock %}
