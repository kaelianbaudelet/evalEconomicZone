{% extends "base.html.twig" %}
{% block title %}
	{{ parent() }}
	Liste des monnaies
{% endblock %}
{% block content %}
	<div class="container my-5">


		<h1 class="text-center mb-4">Liste des monnaies</h1>
		<a class="mb-5 btn btn-primary" href="index.php?page=addCurrency">
			Ajouter une monnaie
		</a>

		<div class="row row-cols-1 row-cols-md-3 g-4">

			{% for c in currencys %}
				<div class="col">
					<div class="card h-100">
						<div class="card-body">
							<h5 class="card-title">
								{{ c.name }}</h5>
							<h6 class="card-subtitle mb-2 text-muted">Zone Economique :
								{{ c.economiczone.name }}
							</h6>
						</div>
						<div class="card-footer text-end">
							<a class="btn btn-primary" href="index.php?page=updateCurrency&id={{c.id}}">
								Modifier
							</a>
							<a class="btn btn-danger" href="index.php?page=deleteCurrency&id={{c.id}}">
								Supprimer
							</a>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}
